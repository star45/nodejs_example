extends ../layout

block content
  .container
    .row
      .col-md-offset-4.col-md-5.m-signForm
        form(method="POST", action="/user/signin")#dSigninForm
          .modal-header 登录豆瓣电影
          .modal-body.clearfix
            span.err_tip(style="display:none;")
            .form-group.clearfix
              label(for="dSigninName") 用户名
              input#dSigninName.form-control(name="user[name]", type="text")
            .form-group.clearfix
              label(for="dSigninPassword") 密码
              input#dSigninPassword.form-control(name="user[password]", type="password")
          .modal-footer
            a(href="/"): button.btn.btn-default(type="button") 关闭
            button.btn.btn-success(type="submit") 登录